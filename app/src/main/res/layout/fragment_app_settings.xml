<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Savas_Hakkinda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
       >

        <ImageView
            android:id="@+id/go_Back_Savas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/gobackarrow" />

        <TextView
            android:id="@+id/savas_Hakkında_Txt"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_searchview_myroutes"
            android:gravity="center"
            android:text="Ayarlar"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/custom_rectangle_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:elevation="0.75dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:text="Kullanıcı Ayarları"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/custom_rectangle_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:elevation="0.75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uygulamayı Oyla"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/custom_rectangle_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:elevation="0.75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uygulama Hakkında"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/custom_rectangle_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:elevation="0.75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanılan Kaynaklar"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ayarlar_Cikis_Yap"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/custom_rectangle_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_marginBottom="64dp"
        android:elevation="0.75dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çıkış Yap"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:background="@drawable/ic_play_arrow"
            />

    </LinearLayout>

</LinearLayout>

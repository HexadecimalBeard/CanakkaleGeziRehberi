<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentMonuments">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/gobackarrow" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView_fragment_monuments"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_searchview_myroutes"
            android:focusable="true"
            android:nextFocusLeft="@id/searchView_fragment_monuments"
            android:nextFocusUp="@id/searchView_fragment_monuments"
            app:iconifiedByDefault="true"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Ara"
            app:searchIcon="@drawable/searchview_icon"
            />

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>